{
  "info": {
    "name": "Sweet Shop API",
    "description": "Complete API collection for Sweet Shop application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "sweetId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "    console.log('Token saved:', jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin123\",\n  \"role\": \"admin\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "    console.log('Token saved:', jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Sweets Management",
      "item": [
        {
          "name": "Get All Sweets",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/sweets",
              "host": ["{{baseUrl}}"],
              "path": ["sweets"]
            }
          }
        },
        {
          "name": "Create Sweet",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('sweetId', jsonData.data._id);",
                  "    console.log('Sweet ID saved:', jsonData.data._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Chocolate Bar\",\n  \"description\": \"Delicious dark chocolate bar\",\n  \"price\": 2.99,\n  \"category\": \"chocolate\",\n  \"imageUrl\": \"/chocolate.jpg\",\n  \"quantity\": 50\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/sweets",
              "host": ["{{baseUrl}}"],
              "path": ["sweets"]
            }
          }
        },
        {
          "name": "Search Sweets",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/sweets/search?name=chocolate&minPrice=1&maxPrice=5",
              "host": ["{{baseUrl}}"],
              "path": ["sweets", "search"],
              "query": [
                {
                  "key": "name",
                  "value": "chocolate"
                },
                {
                  "key": "category",
                  "value": "chocolate",
                  "disabled": true
                },
                {
                  "key": "minPrice",
                  "value": "1"
                },
                {
                  "key": "maxPrice",
                  "value": "5"
                }
              ]
            }
          }
        },
        {
          "name": "Get Single Sweet",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/sweets/{{sweetId}}",
              "host": ["{{baseUrl}}"],
              "path": ["sweets", "{{sweetId}}"]
            }
          }
        },
        {
          "name": "Update Sweet",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Premium Chocolate Bar\",\n  \"price\": 3.99,\n  \"quantity\": 75\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/sweets/{{sweetId}}",
              "host": ["{{baseUrl}}"],
              "path": ["sweets", "{{sweetId}}"]
            }
          }
        },
        {
          "name": "Delete Sweet",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/sweets/{{sweetId}}",
              "host": ["{{baseUrl}}"],
              "path": ["sweets", "{{sweetId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Inventory Management",
      "item": [
        {
          "name": "Purchase Sweet",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 2\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/sweets/{{sweetId}}/purchase",
              "host": ["{{baseUrl}}"],
              "path": ["sweets", "{{sweetId}}", "purchase"]
            }
          }
        },
        {
          "name": "Restock Sweet",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 50\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/sweets/{{sweetId}}/restock",
              "host": ["{{baseUrl}}"],
              "path": ["sweets", "{{sweetId}}", "restock"]
            }
          }
        }
      ]
    }
  ]
}
